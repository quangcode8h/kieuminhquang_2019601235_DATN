@{
    var lstBrand = ViewBag.lstBrand as List<Watch.Models.EF.Brand>;
    var type = ViewBag.Type;
}

@if (type == "menu")
{
    foreach (var item in lstBrand)
    {
        var url = "/thuong-hieu/" + item.Metatitle.Trim() + "-" + item.ID;
        <li><a href="@url"><i class="fa fa-angle-double-right fa-fw"></i>@item.Name </a></li>
    }

}
else
{
    foreach (var item in lstBrand)
    {
        var url = "/thuong-hieu/" + item.Metatitle.Trim() + "-" + item.ID;
        <div class="item">
            <div class="single-client">
                <a href="@url">
                    <img src="~/Assets/Client/img/brand/@item.Image" alt="brand-client" />
                </a>
            </div>
        </div>
    }

}


