    <script>
        $(document).ready(function () {
            var url = window.location.pathname;
            $('ul.treeview-menu a').each(function () {
                var href_a = $(this).attr('href');
                if (href_a == url) {
                    //$(this).parent('ul').css('display', 'block');
                    //$(this).parent('ul').addClass('menu-open');
                    $(this).parents('.treeview').addClass('active');
                    $(this).parents('.treeview-menu').css('display', 'block');
                    $(this).parents('.treeview-menu').addClass('menu-open');
                    $(this).parent().addClass('active');
                }

            });

            $('ul.sidebar-menu a').each(function () {
                var href_a = $(this).attr('href');
                if (href_a == url) {
                    //$(this).parent('ul').css('display', 'block');
                    //$(this).parent('ul').addClass('menu-open');
                    $(this).parents('.treeview').addClass('active');
                    $(this).parent().addClass('active');
                }

            });
        });
    </script>
